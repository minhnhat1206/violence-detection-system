{
  "apiVersion": 1,
  "title": "Spark Structured Streaming Pipeline Monitoring v2",
  "uid": "spark-pipeline-monitor",
  "description": "Dashboard giám sát trạng thái Cluster Spark và hiệu suất Data Pipeline (Kafka to Iceberg).",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Alive Spark Workers",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 4, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "metrics_master_aliveWorkers_Value",
          "legendFormat": "Worker Alive",
          "datasource": "Prometheus"
        }
      ],
      "options": {
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "red", "value": 0 },
            { "color": "orange", "value": 1 },
            { "color": "green", "value": 2 }
          ]
        },
        "showThresholdLabels": true,
        "showThresholdMarkers": true,
        "unit": "count"
      }
    },
    {
      "id": 2,
      "title": "Spark Job Processing Throughput (Records/Sec)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 10, "x": 4, "y": 0 },
      "targets": [
        {
          "expr": "rate(metrics_driver_streaming_processedRecords_Count[1m])",
          "legendFormat": "Tốc độ xử lý",
          "datasource": "Prometheus"
        }
      ],
      "options": {
        "tooltip": { "mode": "single" },
        "unit": "recs/s"
      }
    },
    {
      "id": 3,
      "title": "Worker Free Memory (MB)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 4, "x": 14, "y": 0 },
      "targets": [
        {
          "expr": "avg(metrics_worker_memFree_MB_Value)",
          "legendFormat": "Bộ nhớ Trống",
          "datasource": "Prometheus"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "unit": "MB",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "green", "value": 0 },
            { "color": "red", "value": 512 }
          ]
        }
      }
    },
    {
      "id": 4,
      "title": "End-to-End Latency (Last 5m Avg)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "avg_over_time(metrics_driver_streaming_endToEndDelay_Max[5m])",
          "legendFormat": "E2E Latency",
          "datasource": "Prometheus"
        }
      ],
      "options": {
        "tooltip": { "mode": "single" },
        "unit": "s",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "green", "value": 0 },
            { "color": "orange", "value": 10 },
            { "color": "red", "value": 30 }
          ]
        }
      }
    },
    {
      "id": 5,
      "title": "System CPU Usage (All Nodes)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}} CPU Used %",
          "datasource": "Prometheus"
        }
      ],
      "options": {
        "tooltip": { "mode": "single" },
        "unit": "percent"
      }
    }
  ]
}
